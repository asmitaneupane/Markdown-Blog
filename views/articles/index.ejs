<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="index.css" type="text/css" />
    <title>Blog</title>
</head>

<body>
    <div class="container">
        <h1 class="site-title">Blog Articles</h1>
        <a href="/articles/new" class="btn btn-primary">New Article</a>

        <% articles.forEach(article=> { %>
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">
                        <%= article.title %>
                    </h4>
                    <div class="card-subtitle">
                        <%= article.createdAt.toLocaleDateString('en-US') %>
                    </div>
                    <div class="card-text">
                        <%= article.description %>
                    </div>
                    <a href="articles/<%= article.slug %>" class="btn btn-primary">Read More</a>
                    <a href="articles/edit/<%= article.id %>" class="btn btn-info">Edit</a>
                    <form action="/articles/<%= article.id %>?_method=DELETE" method="post" class="ds-inline-block">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>

            </div>
            <% }) %>


    </div>
</body>

</html>